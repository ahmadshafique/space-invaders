<!DOCTYPE HTML>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="static/css/main.css">
    <link rel="stylesheet" href="static/css/bootstrap.min.css">
    <title>Plane Invaders</title>
</head>

<body>
    <div class="container-fluid background">
        <form method="POST" class="logout" action="/logout">
            <button type="submit" class="playbtn"> Logout</button>
        </form>
        <h3 class="display-4 plane-heading">Main Selection Menu</h3>

        <form method="POST" action="/">
            <h4>Select Level</h4>
            <% for(let i = 1; i <= level && i <= 10; i++) { %>
            <label class="radio-inline">
                <input type="radio" name="level" class="selectBox" value=<%= i %> <% if(i === 1) { %> <%= "checked" %>
                    <% } %>>
                <h3><%= i %></h3>
            </label>
            <% } %>

            <h4>Select Plane</h4>
            <% for(let i = 1; i <= plane && i <= 10; i++) { %>
            <label class="radio-inline">
                <input type="radio" name="plane" class="selectBox" value=<%= i %> <% if(i === 1) { %> <%= "checked" %>
                    <% } %>>
                <h3><%= i %></h3>
            </label>
            <% } %>

            <div class="playDiv">
                <button type="submit" class="playbtn">
                    <h4>P L A Y</h4>
                </button>
            </div>

        </form>

    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src=" static/js/client.js"> </script>
    <script src="static/js/bootstrap.min.js"></script>
</body>

</html>